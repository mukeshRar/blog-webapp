<%- include('partials/header.ejs') -%>

    <h1>Compose</h1>
    
    <form action="/compose" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="postTitle" class="form-control">
            <label for="desc" class="form-label">Post</label>
            <textarea name="postBody" id="desc" cols="30" rows="5" class="form-control"></textarea>
        </div>  
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

